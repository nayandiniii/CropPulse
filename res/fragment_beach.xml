<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BeachFragment"
    android:background="@drawable/back11">

    <!-- Image at the top of the page -->
    <ImageView
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285px"
        android:src="@drawable/wave" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_image">

        <!-- Use LinearLayout with vertical orientation to stack the images -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/helios"
                android:text="Beach "
                android:textColor="@color/lavender"/>
            <!-- Image "one" -->
            <ImageView
                android:id="@+id/beach1"
                android:layout_width="match_parent"
                android:layout_height="700px"
                android:src="@drawable/beach1"
                android:scaleType="fitXY"
                android:layout_marginTop="1600dp"
                android:background="@drawable/rounded_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="                      Kudle Beach"
                android:textColor="@color/white"
                android:fontFamily="@font/helios"
                android:background="@color/lavender"/>

            <!-- Image "two" -->
            <ImageView
                android:id="@+id/beach2"
                android:layout_width="match_parent"
                android:layout_height="700px"
                android:src="@drawable/beach2"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="                        Paradise"
                android:textColor="@color/white"
                android:fontFamily="@font/helios"
                android:background="@color/lavender"/>
            <!-- Image "three" -->
            <ImageView
                android:id="@+id/beach3"
                android:layout_width="match_parent"
                android:layout_height="700px"
                android:src="@drawable/beach3"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="                      Tarrinabhavi"
                android:textColor="@color/white"
                android:fontFamily="@font/helios"
                android:background="@color/lavender"/>
            <!-- Image "four" -->
            <ImageView
                android:id="@+id/beach4"
                android:layout_width="match_parent"
                android:layout_height="700px"
                android:src="@drawable/beach4"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="                        Half Moon"
                android:textColor="@color/white"
                android:fontFamily="@font/helios"
                android:background="@color/lavender"/>
            <!-- Image "five" -->
            <ImageView
                android:id="@+id/beach5"
                android:layout_width="match_parent"
                android:layout_height="700px"
                android:src="@drawable/beach5"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="                            Malpe"
                android:textColor="@color/white"
                android:fontFamily="@font/helios"
                android:background="@color/lavender"/>
            <!-- Image "six" -->
            <ImageView
                android:id="@+id/beach6"
                android:layout_width="match_parent"
                android:layout_height="700px"
                android:src="@drawable/beach6"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="                        Blue Flag"
                android:textColor="@color/white"
                android:fontFamily="@font/helios"
                android:background="@color/lavender"/>

            <!-- Image "seven" -->
            <ImageView
                android:id="@+id/beach7"
                android:layout_width="match_parent"
                android:layout_height="700px"
                android:src="@drawable/beach7"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="                      Udupi Beach"
                android:textColor="@color/white"
                android:fontFamily="@font/helios"
                android:background="@color/lavender"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
