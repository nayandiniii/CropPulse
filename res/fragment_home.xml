<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragment"
    tools:ignore="MissingClass">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lavender"
        android:id="@+id/text1"
        android:textColorHighlight="@color/blue"
        android:text="Better Future"
        android:fontFamily="@font/helios"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450px"
        android:textSize="44dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:id="@+id/text12"
        android:textColorHighlight="@color/white"
        android:src="@drawable/join"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text1"
        android:fontFamily="@font/helios"
        android:layout_marginLeft="50px"
        android:layout_marginTop="100px"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lavender"
        android:id="@+id/text3"
        android:layout_below="@id/text12"
        android:textColorHighlight="@color/white"
        android:text="Join Us"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/helios"
        android:textStyle="bold"
        android:layout_marginTop="00px"
        android:textSize="68dp"/>
    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lavender"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1000px"
        android:text="Explore !"
        android:fontFamily="@font/helios"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:background="@color/texteal"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="Hope @Nandini 2247153"/>
</RelativeLayout>